<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#00FFFFFF">

    <TextView
        android:id="@+id/textViewWindSpeed"
        android:layout_width="122dp"
        android:layout_height="28dp"
        android:layout_marginTop="17dp"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/textView8"
        app:layout_constraintTop_toBottomOf="@+id/textViewWindDirection" />

    <TextView
        android:id="@+id/textViewWindDirection"
        android:layout_width="122dp"
        android:layout_height="28dp"
        android:layout_marginTop="12dp"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/textView7"
        app:layout_constraintTop_toBottomOf="@+id/textViewWet" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="238dp"
        android:layout_height="26dp"
        android:layout_marginTop="18dp"
        android:text="Осадки"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="238dp"
        android:layout_height="26dp"
        android:layout_marginTop="18dp"
        android:text="Скорость ветра"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="238dp"
        android:layout_height="26dp"
        android:layout_marginTop="16dp"
        android:text="Направление ветра"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <ImageView
        android:id="@+id/imageViewWeather"
        android:layout_width="182dp"
        android:layout_height="182dp"
        android:layout_marginStart="114dp"
        android:layout_marginEnd="115dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_menu_gallery" />

    <TextView
        android:id="@+id/textViewWeatherDescription"
        android:layout_width="193dp"
        android:layout_height="100dp"
        android:layout_marginStart="109dp"
        android:layout_marginEnd="109dp"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewWeather" />

    <TextView
        android:id="@+id/textViewTemperature"
        android:layout_width="145dp"
        android:layout_height="66dp"
        android:layout_marginStart="133dp"
        android:layout_marginEnd="133dp"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="50sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewWeatherDescription" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="238dp"
        android:layout_height="26dp"
        android:layout_marginTop="18dp"
        android:text="Атмосферное давление"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewTemperature" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="238dp"
        android:layout_height="26dp"
        android:layout_marginTop="16dp"
        android:text="Относительная влажность"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <TextView
        android:id="@+id/textViewPressure"
        android:layout_width="122dp"
        android:layout_height="28dp"
        android:layout_marginTop="18dp"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/textViewTemperature" />

    <TextView
        android:id="@+id/textViewWet"
        android:layout_width="122dp"
        android:layout_height="28dp"
        android:layout_marginTop="14dp"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/textViewPressure" />

    <TextView
        android:id="@+id/textViewRainChance"
        android:layout_width="122dp"
        android:layout_height="28dp"
        android:layout_marginTop="14dp"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/textView9"
        app:layout_constraintTop_toBottomOf="@+id/textViewWindSpeed" />

</androidx.constraintlayout.widget.ConstraintLayout>